
@{
    ViewData["Title"] = "Materials/Edit";
}

<h3>Edit Material</h3>
<form method="post">
    <div class="form-group">
        <label for="name">Material Name</label>
        <input name="name" type="text" class="form-control" id="materialName">
        <label for="description">Material Description</label>
        <input name="description" type="text" class="form-control" id="materialDescription">
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>